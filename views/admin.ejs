<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-danger mb-4">
        <div class="container">
            <span class="navbar-brand">üîí ADMIN DASHBOARD</span>
            <a class="btn btn-light btn-sm" href="/">Lihat Toko</a>
        </div>
    </nav>

    <div class="container">
        
        <div class="card shadow mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0 text-primary">‚ûï Input Pembelian Baru (Manual)</h5>
            </div>
            <div class="card-body">
                <form action="/buy" method="POST" class="row g-3">
                    <input type="hidden" name="source" value="admin">

                    <div class="col-md-6">
                        <label class="form-label">Pilih Produk</label>
                        <select name="product_id" class="form-select" required>
                            <option value="" disabled selected>-- Pilih Barang --</option>
                            <% products.forEach(p => { %>
                                <% if(p.quantity > 0) { %>
                                    <option value="<%= p.id %>">
                                        <%= p.name %> - <%= formatRupiah(p.price) %> (Sisa: <%= p.quantity %>)
                                    </option>
                                <% } else { %>
                                    <option disabled class="text-danger"><%= p.name %> (HABIS)</option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Nama Pembeli</label>
                        <input type="text" name="customer_name" class="form-control" placeholder="Nama Customer" required>
                    </div>
                    <div class="col-md-2 d-grid">
                        <label class="form-label text-white">.</label>
                        <button type="submit" class="btn btn-primary">Proses</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-white">
                <h5 class="mb-0">üìã Riwayat Transaksi</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nama Customer</th>
                            <th>Produk</th>
                            <th>Waktu</th>
                            <th>Status</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% purchases.forEach(item => { %>
                            <tr>
                                <td><%= item.id %></td>
                                <td><%= item.customer_name %></td>
                                <td><%= item.name %></td>
                                <td><%= new Date(item.purchase_date).toLocaleString() %></td>
                                <td>
                                    <% if(item.status == 'active') { %>
                                        <span class="badge bg-success">Berhasil</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">Dibatalkan</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if(item.status == 'active') { %>
                                        <form action="/cancel/<%= item.id %>" method="POST">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Batalkan pesanan ini?')">‚ùå Cancel</button>
                                        </form>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</body>
</html>